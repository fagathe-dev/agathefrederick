{% extends "base.html.twig" %}

{% block stylesheets %}
  <style>
    .card {
      width: 100%;
      max-width: 550px;
      min-height: 100px;
      border: none;
      box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.08);
    }
    .card-body {}
    .wrapper > .main {
      display: flex;
      flex-flow: column nowrap;
      align-items: center;
      justify-content: flex-start;
      padding-top: 80px;
    }
  </style>
{% endblock %}

{% block body %}
  <div class="card">
    <div class="card-body">
      {% if title is defined %}
        <h5 class="card-title">{{ title|capitalize }}</h5>
      {% endif %}
      {% if subtitle is defined %}
        <p class="card-text lead">{{ subtitle|capitalize }}</p>
      {% endif %}
      {% block main %}
        
      {% endblock %}
    </div>
  </div>
{% endblock %}